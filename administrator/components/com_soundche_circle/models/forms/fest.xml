<?xml version="1.0" encoding="utf-8"?>
<form class="form-validate" onsubmit="return doValidate( this );">
    <fieldset>
        <field
                name="id"
                type="hidden"
                />
        <field name="created_by" type="createdby" default=""
               label="COM_SOUNDCHE_CIRCLE_FORM_LBL_CIRCLESOUNDCHE_CREATED_BY"
               description="COM_SOUNDCHE_CIRCLE_FORM_DESC_CIRCLESOUNDCHE_CREATED_BY"/>


        <field
                name="published"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="title"
                type="text"
                label="COM_SOUNDCHE_CIRCLE_NAME_LABEL"
                description="COM_SOUNDCHE_CIRCLE_NAME_DESC"
                size="40"
                class="required"
                default=""
                />

        <field name="date" type="calendar" default="" class="required" label="Дата" description="Дата проходження фестивалю"
               format="%Y-%m-%d"/>
        <field
                name="description"
                type="editor"
                label="COM_SOUNDCHE_CIRCLE_INFO_LABEL"
                description="COM_SOUNDCHE_CIRCLE_INFO_DESC"
                class="required "
                filter="JComponentHelper::filterText"

                />

        <field name="img_category"
               type="phocagallerycategory"
               label="COM_SOUNDCHE_CIRCLE_FORM_SELECT_CAT_IMG"
               description="COM_SOUNDCHE_CIRCLE_FORM_SELECT_CAT_IMG_DESC"/>

        <field name="video_category"
               type="phocagallerycategory"
               label="COM_SOUNDCHE_CIRCLE_FORM_SELECT_CAT_VIDEO"
               description="COM_SOUNDCHE_CIRCLE_FORM_SELECT_CAT_VIDEO_DESC"/>

        <!--<field name="partner"-->
               <!--type="partners"-->
               <!--class="input"-->
               <!--multiple="true"-->
               <!--label="COM_SOUNDCHE_CIRCLE_FORM_SELECT_PARTNERS"-->
               <!--description="COM_SOUNDCHE_CIRCLE_FORM_SELECT_PARTNERS_DESC"/>-->


    </fieldset>

</form>