<?xml version="1.0" encoding="utf-8"?>
<form class="form-validate">
    <fieldset>
        <field
                name="id"
                type="hidden"
                />
        <field name="created_by" type="createdby" default=""
               label="COM_SOUNDCHE_CIRCLE_FORM_LBL_CIRCLESOUNDCHE_CREATED_BY"
               description="COM_SOUNDCHE_CIRCLE_FORM_DESC_CIRCLESOUNDCHE_CREATED_BY"/>


        <field
                name="published"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="name"
                type="text"
                label="COM_SOUNDCHE_CIRCLE_NAME_LABEL"
                description="COM_SOUNDCHE_CIRCLE_NAME_DESC"
                size="40"
                class="required"
                default=""
                />
        <field
                name="site"
                type="text"
                label="COM_SOUNDCHE_CIRCLE_SITE_LABEL"
                description="COM_SOUNDCHE_CIRCLE_SITE_DESC"
                size="40"
                class="required"
                default=""
                />
        <field
                name="description"
                type="textarea"
                label="COM_SOUNDCHE_CIRCLE_INFO_LABEL"
                description="COM_SOUNDCHE_CIRCLE_INFO_DESC"
                rows="10" cols="5"
                class="required"
                default=""
                />
        <field
                name="logo"
                type="media"
                label="COM_SOUNDCHE_CIRCLE_TEAM_LOGO_LABEL"
                description="COM_SOUNDCHE_CIRCLE_TEAM_LOGO_DESC"
                size="40"
                class="required"
                default="images/icon/No-Image-Available.gif"
                />


    </fieldset>
</form>